			<input type="text" name="plaintext_url" id="plaintext_url"  placeholder="http://" >
		</div>
	</div>
</div>




<div class="row">
	<div class="small-12 columns">
		<input 
			type="radio" 
			name="plaintext_content_from" 
			id="plaintext_content_from_auto" 
			value="auto" 
			class="toggle_send_url_options"
			<!-- tmpl_if expr="(list_settings.mass_mailing_show_by_default_type eq 'html')" -->
				checked="checked"
			<!-- /tmpl_if -->
